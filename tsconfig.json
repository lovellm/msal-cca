{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["es2021"],
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "build"
  },
  "include": ["index.ts", "src/**/*"],
  "exclude": ["build/**/*", "src/**/*.test.ts"],
  "ts-node": {
    "files": true
  }
}
